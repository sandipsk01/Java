package Patterns;
import java.util.Scanner;
public class HalfDiamond {

	public static void main(String[] args) {
		Scanner s=new Scanner(System.in);
		int n=s.nextInt();
		int n1=n+1;
		int i=1;
		while(i<=n1) {
			int j=2;
			System.out.print('*');
			while(j<i) {
				System.out.print(j);
				j=j+1;
			}
			
			int p=i;
			while(p>=1) {
				System.out.print(p);
				p=p-1;
			}
			System.out.print('*');
			System.out.println();
			i=i+1;
		}

	}

}
