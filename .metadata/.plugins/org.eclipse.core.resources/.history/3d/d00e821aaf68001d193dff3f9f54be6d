package Patterns;
import java.util.Scanner;
public class HalfDiamond {

	public static void main(String[] args) {
		Scanner s=new Scanner(System.in);
		int n=s.nextInt();
		int n1=n/2+1;
		int i=1;
		while(i<=n1) {
			int j=1;
			while(j<=2*i-1) {
				System.out.print('*');
				int inc=1;
				while(inc<=i-1) {
					System.out.print(inc);
					inc=inc+1;
				}
				
				int dec=i-2;
				while(dec>=1) {
					System.out.print(dec);
					dec=dec-1;
				}
				System.out.println('*');
				System.out.println();
				i=i+1;
			}
		}
	}

}
