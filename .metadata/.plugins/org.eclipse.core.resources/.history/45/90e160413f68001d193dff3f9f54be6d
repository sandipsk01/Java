package Patterns;

import java.util.Scanner;

public class DiamondStars {
	public static void main(String[]args) {
		Scanner s= new Scanner(System.in);
		int n= s.nextInt();
		int middle= (n/2)+1;
		int i=1;
		while(i<=middle) {
			int spaces=1;
			while(spaces<=(middle-1)) {
				System.out.print(' ');
				spaces=spaces+1;
			}
			
			int inc=1;
			while(inc<=i) {
				System.out.print('*');
				inc=inc+1;
			}
			
			int dec=i-1;
			while(dec>=1) {
				System.out.print('*');
				dec=dec-1;
			}
			System.out.println();
			i=i+1;
		}
	}

}
